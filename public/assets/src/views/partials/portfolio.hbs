 <section class="no-padding" id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <hr class="light">
                    <h2 class="section-heading">Portfolio new </h2>
                    <hr class="primary">
                </div>
            </div>
        </div>

        <div class="container-fluid">

            <div class="row no-gutter">


                    {{#each projects}}
                         <div class="col-lg-4 col-sm-6" >
                        <div data-toggle="modal" data-target="#proj-{{this.id}}" class="portfolio-box {{this.id}}" style="background: url(/images/portfolio/{{this.id}}.jpg);">


                            <div class="portfolio-box-caption">


                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                        {{this.title}}
                                    </div>
                                    <div class="project-name">
                                       {{this.short_description}}
                                    </div>
                                    <div class="cta-container">
                                         <div class="btn btn-moreinfo">Info</div>
                                         <a class="btn" href='{{this.link.value}}' target="_blank">Live link</a>

                                    </div>

                                </div>
                            </div>
                         </div>
                         </div>



                         <div id="proj-{{this.id}}" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-lg">
                                <!-- Modal content-->
                                <div class="modal-content myModalContent">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">{{this.title}}</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>{{this.description}}</p>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}




            </div>
        </div>
    </section>
